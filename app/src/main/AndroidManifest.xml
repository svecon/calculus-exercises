<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cz.svecon.calculus" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/divide_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.svecon.calculus.HomeActivity" />
        </activity>
        <activity
            android:name=".DivisionActivity"
            android:label="@string/title_activity_division"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.svecon.calculus.HomeActivity" />
        </activity>
        <activity
            android:name=".MultiplicationActivity"
            android:label="@string/title_activity_multiplication"
            android:parentActivityName=".HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cz.svecon.calculus.HomeActivity" />
        </activity>
    </application>

</manifest>
